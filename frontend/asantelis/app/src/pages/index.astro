---
import Layout from "../layouts/Layout.astro";
import AnimalesCrud from "../components/AnimalesCrud.jsx";

// URL base de la API
const API_BASE_URL = "http://127.0.0.1:8000/api/v1/asantelis";
---

<Layout title="Registro de Animales">
  <div class="flex items-center justify-center h-full">
    <div class="px-4 max-w-5xl">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
        <div class="bg-neutral-900 text-white px-6 py-4">
          <h1 class="text-2xl font-bold">Registro de Animales</h1>
        </div>
      </div>

      <AnimalesCrud client:load apiUrl={API_BASE_URL} />
    </div>
  </div>
</Layout>
